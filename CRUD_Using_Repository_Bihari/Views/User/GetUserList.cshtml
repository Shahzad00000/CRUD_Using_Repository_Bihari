@model IEnumerable<CRUD_Using_Repository_Bihari.Models.User>
@{
    ViewData["Title"] = "GetUserList";
}
<div class="container">
    <div class="row">
        @if (TempData["userError"] != null)
        {
            <div class="alert alert-danger notification text-center">
                @TempData["userError"]
            </div>

        }
        @if (TempData["userSuccessful"] != null)
        {
            <div class="alert alert-success notification text-center">
                @TempData["userSuccess"]
            </div>
        }
        <div class="col-10 offset-1">
            <div class="float-end">
                <a class="btn btn-sm btn-primary" asp-action="AddUser" asp-controller="User">Add User</a>
            </div>
            <table class="table table-hover table-striped table-bordered">
                <thead class="text-center bg-dark text-light">
                    <tr>
                        <th>UserId</th>
                        <th>UserName</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>PinCode</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.Gender</td>
                            <td>@item.Email</td>
                            <td>@item.PinCode</td>
                         
                            <td>
                                @if (item.IsActive)
                                {
                                    <input type="checkbox" value="@item.IsActive" checked="checked" disabled />
                                }
                                else
                                {
                                    <input type="checkbox" value="@item.IsActive" disabled />
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary m-1" asp-controller="User" asp-action="Edit" asp-route-Id="@item.UserId">Edit</a>|
                                <a class="btn btn-sm btn-danger m-1" asp-controller="User" asp-action="DeleteRecord" asp-route-Id="@item.UserId" onclick="return confirm('Are you Sure,You want to Delete this Record!')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
